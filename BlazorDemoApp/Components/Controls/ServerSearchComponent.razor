
<div class="input-group mb-3 input-width">
    <input type="text" class="form-control" placeholder="Search Servers"
           @bind-value="serverFilter"
           @bind-value:event="oninput" />
    <button class="btn btn-outline-secondary" type="button" id="search" @onclick="HandleSearch">Search</button>
</div>

@code {
    [Parameter]
    public EventCallback<string> SearchServerCallback { get; set; }//used to provide info from child(ServerSearch) to parent(Servers) component
    [Parameter]
    public List<Server>? servers { get; set; }


    private string serverFilter = "";

    private void HandleSearch()
    {
        SearchServerCallback.InvokeAsync(serverFilter);
        // this.servers = ServerRepo.SearchServers(serverFilter);
        // this.selectedCity = string.Empty;
    }

    public void ClearSearchFilter()
    {
        this.serverFilter = string.Empty;
    }

}
