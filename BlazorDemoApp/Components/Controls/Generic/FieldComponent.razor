@* TemplatedComponent *@
<div class="row mb-3">
    <div class="col-2">
        <label class="col-form-label">@Label</label>
    </div>
    <div class="col-6 input-width">
        @Control
    </div>
    <div class="col">
        @ValidationMessageControl
    </div>
</div>

@code {
    [Parameter]
    public string? Label { get; set; }

    [Parameter]
    public RenderFragment? Control { get; set; }

    [Parameter]
    public RenderFragment? ValidationMessageControl { get; set; }


}
